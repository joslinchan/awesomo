<h1>Colour Collection</h1>
<ul>
  <% @colourCollection.each do |colour| %>
    <li>
      <%= link_to(
        colour.title,
        colour.url
       ) %><br />
       <%= link_to(
         image_tag(colour.image_url),
         colour.url
       ) %> 
       <br />
       <%= link_to(
         "Delete",
         colour_path(colour.id),
         method: :delete,
         data: {
           confirm:"Are you sure?"
         }
        ) %>
    </li>
  <% end %>
</ul>
