<h1>Pattern Collection</h1>
<ul>
  <% @patternCollection.each do |pattern| %>
    <li>
      <%= link_to(
        pattern.title,
        pattern.url
       ) %><br />
       <%= link_to(
         image_tag(pattern.image_url),
         pattern.url
       ) %> 
      <br />
      <%= link_to(
        "Delete",
        pattern_path(pattern.id),
        method: :delete,
        data: {
          confirm:"Are you sure?"
        }
      ) %>
    </li>
  <% end %>
</ul>
